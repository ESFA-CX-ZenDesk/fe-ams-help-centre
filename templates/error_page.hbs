<div class="govuk-width-container">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{#is error 'unauthorized'}}
        <h1 class="govuk-heading-xl">{{link 'sign_in'}}</h2>
      {{/is}}

      {{#is error 'forbidden'}}
        <h1 class="govuk-heading-xl">{{t 'not_authorized'}}</h2>
      {{/is}}

      {{#is error 'not_found'}}
        <h1 class="govuk-heading-xl">Sorry, there is a problem with this service</h1>
        <p class="govuk-body">
          Try again later
        </p>
      {{/is}}

      {{#link 'help_center'}}
        {{t 'back_to_homepage'}}
      {{/link}}
		<br>
    </div>
  </div>
</div>